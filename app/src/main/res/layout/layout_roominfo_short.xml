<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            style="@style/CardViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/room_image"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_room" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_toLeftOf="@id/room_icon_action"
                                android:orientation="vertical">

                                <in.probusinsurance.probusdesign.ui.textview.TextViewMediumHeading
                                    android:id="@+id/room_txttitle"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerVertical="true"
                                    android:inputType="textCapWords"
                                    android:lines="1"
                                    android:maxLines="1"
                                    android:text="Rajput Rooms" />

                                <in.probusinsurance.probusdesign.ui.textview.TextViewSubHeadingSmall
                                    android:id="@+id/room_txtlocation"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerVertical="true"
                                    android:lines="2"
                                    android:maxLines="2"
                                    android:text="Pno 203 Rajput colony jhalana gram , 302020" />


                                <in.probusinsurance.probusdesign.ui.textview.TextViewMediumHeading
                                    android:id="@+id/room_txtprice"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerVertical="true"
                                    android:layout_toLeftOf="@id/room_favoriteicon"
                                    android:lines="1"
                                    android:maxLines="1"
                                    android:text="â‚¹ 2500/- "
                                    app:customColor="@color/colorPrimary"
                                    app:customColorEnable="true" />

                            </LinearLayout>


                            <LinearLayout
                                android:id="@+id/room_icon_action"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:orientation="vertical">

                                <in.probusinsurance.probusdesign.ui.button.ImageButton
                                    android:id="@+id/room_favoriteicon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="@dimen/margin_5dp"
                                    app:srcCompat="@drawable/ic_favorite" />

                                <in.probusinsurance.probusdesign.ui.button.ImageButton
                                    android:id="@+id/room_directionicon"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:padding="@dimen/margin_5dp"
                                    app:srcCompat="@drawable/ic_direction" />

                            </LinearLayout>


                        </RelativeLayout>


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</layout>