<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content">



        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:background="@drawable/background_marker_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/margin_10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <in.probusinsurance.probusdesign.ui.textview.TextViewMediumHeading
                        android:id="@+id/room_makername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@id/room_favoriteicon"
                        android:text="Rajput Rooms" />

                    <in.probusinsurance.probusdesign.ui.textview.TextViewSubHeadingSmall
                        android:id="@+id/room_makerlocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:text="Pno 203 Rajput jhalana gram , 302020" />

                    <in.probusinsurance.probusdesign.ui.textview.TextViewMediumHeading
                        android:id="@+id/room_makerprice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        app:customColor="@color/colorPrimary"
                        app:customColorEnable="true"
                        android:layout_centerVertical="true"
                        android:text="â‚¹ 3500/-" />


                </LinearLayout>
            </LinearLayout>

            <ImageView
                android:rotation="90"
                android:src="@drawable/ic_arrow_pointer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>


</LinearLayout>