<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/margin_15dp"
    android:paddingTop="@dimen/margin_10dp"
    android:paddingRight="@dimen/margin_15dp">


    <ImageView
        android:id="@+id/recent_search_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center_vertical"
        app:srcCompat="@drawable/ic_recent_search" />

    <LinearLayout
        android:id="@+id/recent_search_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="@dimen/margin_5dp">


        <in.probusinsurance.probusdesign.ui.textview.TextViewMediumHeading
            android:id="@+id/recent_search_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="Search Near by me" />

        <in.probusinsurance.probusdesign.ui.textview.TextViewReviewHeading
            android:id="@+id/recent_search_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="203 raja park , jaipur 302014" />


    </LinearLayout>

    <in.probusinsurance.probusdesign.ui.textview.TextViewMediumHeading
        android:id="@+id/recent_search_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_gravity="center"
        android:gravity="center_vertical"
        android:text="1.4 km" />

</LinearLayout>